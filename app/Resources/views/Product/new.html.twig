{% extends 'base.html.twig' %}
{% block body %}

    <div class ="mx-auto shadow-lg p-5 col-sm-6 bg-light">
        <h3 class="text-center text-danger">Add Product</h3>
        {{ form_start(form) }}
        <div id="form">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.color) }}
                {{ form_widget(form.color, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.price) }}
                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.save, {'attr': {'class': 'mt-2 btn btn-danger col-sm-12 font-weight-bold'}}) }}
                <a href = "{{ path('web_product_display')}}" class="mt-2 btn btn-danger col-sm-12 font-weight-bold">Return</a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}